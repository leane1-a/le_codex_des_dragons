<p style="color: green"><%= notice %></p>

<% content_for :title, "Dragons" %>

<h1>LE CODEX DES DRAGONS</h1>
<h2>Bienvenue !<br>
Parcourez notre application à la recherche de votre dragon préféré !</h2>

<html>
  <head>
    <style>
      body {
        margin: 10px 20px 20px 50px;
      }
    </style>
  </head>


<div id="dragons">
  <% @dragons.each do |dragon| %>
    <%= render dragon %>
    <p>
      <%= link_to "Voir ce dragon", dragon, class: "btn btn-outline-primary" %>
    </p>
  <% end %>
</div>

<%= link_to "Créer un nouveau dragon", new_dragon_path, class: "btn btn-outline-danger" %>
